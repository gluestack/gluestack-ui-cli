{
  "name": "create-next-app-with-gluestack-ui",
  "keywords": [
    "react",
    "react-native",
    "expo",
    "storybook",
    "nextjs",
    "cross-platform",
    "cli"
  ],
  "description": "A CLI tool for easily adding components from gluestack-ui to your projects.",
  "version": "0.1.22-alpha.0",
  "license": "MIT",
  "main": "./dist/index.js",
  "bin": "./dist/index.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "tsc --watch",
    "build": "tsc",
    "test": "jest",
    "test:production": "jest --isProduction=true",
    "prepare": "tsc",
    "dev": "node dist/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "@clack/prompts": "^0.6.3",
    "@gluestack/cli-utils": "^0.1.3",
    "@types/minimist": "^1.2.2",
    "find-package-json": "^1.2.0",
    "fs-extra": "^11.1.1",
    "simple-git": "^3.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.2",
    "jest": "^29.5.0",
    "jest-junit": "^15.0.0",
    "supertest": "^6.3.3",
    "typescript": "^5.0.4"
  }
}
